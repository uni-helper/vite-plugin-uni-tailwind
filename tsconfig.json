{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "types": ["@dcloudio/types", "node"]
  },
  "include": [
    "**/.*.js",
    "**/.*.cjs",
    "**/.*.mjs",
    "**/.*.ts",
    "**/.*.cts",
    "**/.*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts"
  ],
  "exclude": ["**/node_modules", "**/dist", "playground"]
}
