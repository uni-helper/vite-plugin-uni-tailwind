{
  "name": "@uni-helper/vite-plugin-uni-tailwind",
  "version": "0.9.1",
  "description": "支持在 uni-app 中使用 tailwindcss@3 原有语法开发",
  "keywords": [
    "vite",
    "transform",
    "tailwind",
    "tailwindcss",
    "vite-plugin",
    "uni-app",
    "uniapp",
    "miniprogram",
    "mini-program"
  ],
  "homepage": "https://github.com/uni-helper/vite-plugin-uni-tailwind#readme",
  "bugs": {
    "url": "https://github.com/uni-helper/vite-plugin-uni-tailwind/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uni-helper/vite-plugin-uni-tailwind.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "pnpm run build --watch",
    "lint": "run-p lint:eslint lint:markdownlint check:types test:coverage",
    "lint:eslint": "eslint ./src --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "test": "vitest run",
    "release": "release-it",
    "test:coverage": "vitest run --coverage",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@babel/core": "^7.20.7",
    "@vivaxy/wxml": "^2.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt": "^17.3.0",
    "@dcloudio/types": "^3.2.7",
    "@modyqyw/fabric": "^5.14.0",
    "@modyqyw/utils": "^3.0.8",
    "@tsconfig/node18": "^1.0.1",
    "@types/babel__core": "^7.1.20",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitest/coverage-c8": "^0.26.3",
    "@vitest/ui": "^0.26.3",
    "c8": "^7.12.0",
    "commitizen": "^4.2.6",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "release-it": "^15.6.0",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "peerDependencies": {
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "postcss": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.21.0",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
